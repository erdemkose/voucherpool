{
    "name": "erdemkose/voucherpool",
    "description": "An example REST API application to validate/redeem vouchers",
    "keywords": ["slim", "microframework", "rest", "api", "psr7"],
    "homepage": "http://github.com/erdemkose/voucherpool",
    "license": "MIT",
    "authors": [
        {
            "name": "Erdem KÃ¶se",
            "email": "erdemkose@gmail.com",
            "homepage": "https://erdemkose.com/"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "slim/slim": "^3.1",
        "illuminate/database": "^5.4",
        "monolog/monolog": "^1.17"
    },
    "autoload": {
        "psr-4": {
            "VoucherPool\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit"
    }
}
